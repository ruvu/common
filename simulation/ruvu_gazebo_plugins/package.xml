<package format="2">
  <name>ruvu_gazebo_plugins</name>
  <version>1.0.0</version>
  <description>The ruvu_gazebo_plugins package</description>

  <maintainer email="rein@ruvu.nl">Rein Appeldoorn</maintainer>

  <license>TODO</license>

  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>ruvu_lint</build_depend>

  <depend>actionlib</depend>
  <depend>control_msgs</depend>
  <depend>gazebo_dev</depend>
  <depend>gazebo_plugins</depend>
  <depend>geometry_msgs</depend>
  <depend>nav_msgs</depend>
  <depend>roscpp</depend>
  <depend>sensor_msgs</depend>
  <depend>tf2_ros</depend>

  <test_depend>ruvu_lint</test_depend>
  <test_depend>rospy</test_depend>
  <test_depend>rostest</test_depend>
  <test_depend>ruvu_rostest</test_depend>
  <test_depend>xacro</test_depend>

  <export>
      <gazebo_ros plugin_path="${prefix}/lib"  />
      <gazebo_ros gazebo_media_path="${prefix}/models"/>
      <gazebo_ros gazebo_model_path="${prefix}/models"/>
  </export>
</package>
