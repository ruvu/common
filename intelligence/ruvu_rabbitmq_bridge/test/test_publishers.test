<launch>
  <node name="rabbitmq_bridge" pkg="ruvu_rabbitmq_bridge" type="rabbitmq_bridge" required="true">
    <rosparam file="$(find ruvu_rabbitmq_bridge)/test/test_publishers.yaml" command="load" />
    <param name="rabbitmq_host" value="$(optenv RABBITMQ_HOST localhost)" />
  </node>

  <test test-name="test_publishers" pkg="ruvu_rabbitmq_bridge" type="test_publishers" time-limit="5.0"/>
</launch>
