<launch>
  <node name="rabbitmq_bridge" pkg="ruvu_rabbitmq_bridge" type="rabbitmq_bridge">
    <rosparam file="$(find ruvu_rabbitmq_bridge)/test/test_subscribers.yaml" command="load" />
    <param name="rabbitmq_host" value="$(optenv RABBITMQ_HOST localhost)" />
  </node>

  <test test-name="test_subscribers" pkg="ruvu_rabbitmq_bridge" type="test_subscribers" time-limit="5.0"/>
</launch>
